<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefee"
    tools:context=".SendNotification">

    <RelativeLayout
        android:padding="16dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<EditText
    android:hint="Type your message here..."
    android:paddingLeft="15dp"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/send_notify"
    android:textSize="16sp"
    android:padding="20sp"
    android:background="@drawable/send_notfy_edit_text"
    android:textColor="#ec646464"
    android:textColorHint="#b66c6b6b"
    />

    <Button
        android:id="@+id/send_notification_button"
        android:layout_marginTop="15dp"
        android:layout_below="@id/send_notify"
        android:background="@drawable/send_notify_button"
        android:layout_width="match_parent"
        android:text="Send"
        android:textColor="#f4f4f4"
        android:layout_height="55dp" />

    </RelativeLayout>


</RelativeLayout>