<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefee"
    tools:context=".TrackRequest">



    <LinearLayout
        android:id="@+id/pre_msg"
        android:padding="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginBottom="20dp"
            android:src="@drawable/oops"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView

            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have not yet requested for any book"
            android:textSize="18sp"
            />

         <Button
             tools:ignore="OnClick"
             android:onClick="goToRequest"
             android:foreground="?attr/selectableItemBackground"
             android:layout_marginTop="25dp"
             android:paddingRight="25dp"
             android:paddingLeft="25dp"
             android:textColor="@color/white"
             android:background="@drawable/button_shape"
             android:text="Request For a book"
             android:layout_width="wrap_content"
             android:layout_height="50dp" />

    </LinearLayout>


    <ScrollView
        android:visibility="gone"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:layout_marginLeft="35dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginBottom="25dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Ethical Hacking"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/message"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:paddingRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/badge_1"
                android:gravity="center"
                android:background="#afafaf"
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                android:textSize="17sp"
                android:text="Requested"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



                <TextView
                    android:visibility="invisible"
                    android:id="@+id/request_date"
                    android:textSize="12sp"
                    android:text="December 26, 04:12 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/line_before_approve"
            android:layout_marginLeft="15dp"
            android:layout_width="8dp"
            android:layout_height="120dp"
            android:background="#afafaf"/>

        <!--=======================================-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/badge_2"
                android:gravity="center"
                android:background="#afafaf"
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="17sp"
                    android:text="Approved"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/approve_date"
                    android:visibility="invisible"
                    android:textSize="12sp"
                    android:text="December 26, 04:12 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/line_before_issue"
            android:layout_marginLeft="15dp"
            android:layout_width="8dp"
            android:layout_height="120dp"
            android:background="#afafaf"/>

        <!--=================================-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/badge_3"
                android:gravity="center"
                android:background="#afafaf"
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="17sp"
                    android:text="Issued"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:visibility="invisible"
                    android:id="@+id/issue_date"
                    android:textSize="12sp"
                    android:text="December 26, 04:12 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

<TextView
    android:textSize="16sp"
    android:paddingRight="25dp"
    android:layout_marginTop="25dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="This book is a public property. Please do not damage it."/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>