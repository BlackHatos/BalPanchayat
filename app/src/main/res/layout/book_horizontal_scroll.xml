<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="2dp"
    android:elevation="1dp"
    app:cardBackgroundColor="#53686c"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:id="@+id/book_image"
                android:src="@drawable/woman"
                />



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Julius Casear"
                android:textColor="#edebeb"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:id="@+id/book_name"
               android:layout_toEndOf="@+id/book_image"
               android:layout_centerHorizontal="true"
               android:layout_marginLeft="15dp"
                />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="William Shakespeare"
            android:textColor="#edebeb"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:id="@+id/book_author"
            android:layout_toEndOf="@+id/book_image"
            android:layout_below="@id/book_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contributed by Shubham"
            android:textColor="#edebeb"
            android:textSize="15sp"
            android:layout_marginTop="1dp"
            android:id="@+id/book_contributer"
            android:layout_toEndOf="@+id/book_image"
            android:layout_below="@id/book_author"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 26, 2020"
            android:textColor="#edebeb"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:id="@+id/book_date"
            android:layout_toEndOf="@+id/book_image"
            android:layout_below="@id/book_contributer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />



        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="bookId"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

