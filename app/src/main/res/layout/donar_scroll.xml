<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardPreventCornerOverlap="false"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="4dp"
                android:layout_marginRight="7dp"
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_donut_small_black_24dp"/>


            <TextView
                android:layout_toRightOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubham Maurya"
                android:textStyle="bold"
                android:textColor="#6c6c6c"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:id="@+id/donar_name"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:fontFamily="sans-serif"
                android:layout_below="@id/donar_name"
                android:layout_toRightOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donaterd Rs. 500/-"
                android:textStyle="bold"
                android:textColor="#6c6c6c"
                android:textSize="15sp"
                android:id="@+id/donation_ammount"
                android:layout_marginLeft="8dp"
                />


            <TextView
                android:fontFamily="sans-serif"
                android:layout_below="@id/donation_ammount"
                android:layout_toRightOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanks for your support"
                android:textColor="#6c6c6c"
                android:textSize="14sp"
                android:id="@+id/thanks"
                android:layout_marginLeft="8dp"
                />



            <TextView
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December 26, 2020, 04:15 AM"
                android:textColor="#616161"
                android:textSize="10sp"
                android:id="@+id/donation_date"
                android:layout_below="@id/thanks"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                />


            <TextView
                android:id="@+id/donation_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="bookId"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8d6d6d6"
        />


</LinearLayout>