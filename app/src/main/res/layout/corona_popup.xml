<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00282828"
    android:id="@+id/corona_relative"
    >

    <LinearLayout
        android:elevation="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="@drawable/corona_popup"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/kill_corona"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="35dp"
            android:src="@drawable/corona_cut"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="35dp" />

<TextView
    android:textColor="#ea0404"
    android:fontFamily="sans-serif"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Be A Corona Warrior "
    android:textSize="25sp"
    android:textStyle="bold"
    />

        <TextView
            android:textColor="#494949"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay At Home, Save Lives"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="#494949"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corona Harega \n India Jitega"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="#494949"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#IndiaFightsCorona"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        />

        <TextView
            android:textColor="#494949"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click the link below for more detail"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/visit_corona"
            android:layout_marginTop="8sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#0000ff"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://mohfw.gov.in"
            android:textSize="18sp"
            />

    </LinearLayout>

</RelativeLayout>