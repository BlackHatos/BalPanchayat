<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9c282828"
    >

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="310dp"
        android:layout_height="268dp"
        android:background="@drawable/popup_shape"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_info_outline_black_24dp"/>


        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/enter_book_id"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            android:hint="Enter Book ID"
            android:textAlignment="center"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:paddingLeft="22dp"
            android:textSize="17sp"
            android:textColor="#7b7a7a"
            android:textColorHint="#7b7a7a"
            android:background="@drawable/popup_edit_text_shape"
            />

        <Button
            android:id="@+id/click_to_submit_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@drawable/donate_button_shape"
            android:text="Submit"/>

    </LinearLayout>

</RelativeLayout>