<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            >

            <RelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ethical hacking"
                android:textColor="#6c6c6c"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/book_name"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shubham Mauryua"
                android:textColor="#616161"
                android:textSize="16sp"
                android:id="@+id/user_name"
                android:layout_below="@id/book_name"
                android:layout_marginRight="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patna"
                android:textColor="#616161"
                android:textSize="16sp"
                android:id="@+id/user_district"
                android:layout_below="@id/user_name"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-8521457896"
                android:textColor="#616161"
                android:textSize="16sp"
                android:id="@+id/user_phone"
                android:layout_below="@id/user_district"
                />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December 36, 2020, 04:10 AM"
                android:textColor="#616161"
                android:textSize="11sp"
                android:id="@+id/request_date"
                android:layout_below="@id/user_phone"
                />



                <TextView
                    android:id="@+id/book_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="bookId"/>

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="userId"/>

            </RelativeLayout>

            <RelativeLayout
                android:paddingRight="10dp"
                android:id="@+id/layout_2"
                 android:layout_toRightOf="@id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:id="@+id/is_avalable"
                    android:textColor="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="not available"
                    />


                <Button
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/is_avalable"
                    android:id="@+id/approve_button"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Approve"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/donate_button_shape"/>


                <Button
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/is_avalable"
                    android:id="@+id/issue_button"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Issue"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/isssue_button_color"/>


                <Button
                   android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/is_avalable"
                    android:id="@+id/return_button"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Return"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/return_button_color"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8d6d6d6"
        />

</LinearLayout>