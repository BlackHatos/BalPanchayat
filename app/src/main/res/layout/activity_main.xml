<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181717"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/team"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_shape"
        android:hint="@string/email"
        android:inputType="text"
        android:paddingLeft="22dp"
        android:textSize="17sp"
        android:textColor="#e5c8c8c8"
        android:textColorHint="#b6c8c8c8"
        android:id="@+id/email_phone"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittext_shape"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="22dp"
        android:textSize="17sp"
        android:textColor="#e5c8c8c8"
        android:textColorHint="#b6c8c8c8"
        android:id="@+id/password"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="#e5c8c8c8"
        android:layout_gravity="left"
        android:layout_marginTop="13dp"
        android:clickable="true"
        android:layout_marginLeft="16dp"
        android:onClick="getPassword"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/click_to_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_shape"
        android:text="@string/login"
        android:textColor="#faf8f8"
        android:textSize="16sp"
        android:foreground="?attr/selectableItemBackground"
        />


    <Button
        android:id="@+id/custom_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/facebook_button_shape"
        android:text="@string/login_fb"
        android:textColor="#f4e6e3e3"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="#e5c8c8c8"
        android:layout_marginTop="23dp"
        android:clickable="true"
        android:onClick="goToRegister"
        tools:ignore="OnClick"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"/>

</LinearLayout>